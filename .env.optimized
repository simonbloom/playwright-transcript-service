# Optimized configuration for Playwright transcript service
# Copy these settings to .env for production use

# Server
PORT=6623
NODE_ENV=production
API_KEY=your-secure-api-key-here

# Browser Pool Settings
BROWSER_POOL_MIN=3
BROWSER_POOL_MAX=10
BROWSER_TIMEOUT=300000
CONTEXT_TIMEOUT=120000
HEADLESS=true

# Request Queue Settings
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=50
MAX_QUEUE_SIZE=100

# Cache Settings
CACHE_MAX_SIZE=500
CACHE_MAX_AGE=600000

# Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=2000
RETRY_MAX_DELAY=30000
RETRY_FACTOR=2

# Memory Management
MEMORY_THRESHOLD_MB=1024
FORCE_GC=true

# Performance Optimizations
RESOURCE_BLOCK_ENABLED=true
BLOCK_IMAGES=true
BLOCK_STYLESHEETS=true
BLOCK_FONTS=true
BLOCK_MEDIA=true

# Debug Settings
DEBUG_SCREENSHOTS=false
LOG_LEVEL=info

# Railway/Production Settings
RAILWAY_ENVIRONMENT=production
CHROME_PATH=/usr/bin/google-chrome-stable